
{
  "manifest_version": 3,
  "name": "SkillSnap AI",
  "version": "1.0",
  "description": "Extract and analyze job descriptions to identify hard and soft skills using AI.",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
